###
# wm independent hotkeys
###

# Bin System
Print
	screensnap
control + @Print
	screensnap crop
super + c
	qrsend $(rofi -dmenu)

# Lock System
ctrl + alt + Delete
	rofi-powermenu

# General Programs
super + t
	urxvt
super + n
	urxvt -g 110x50 -e ncmpcpp
super + m
	mpv --player-operation-mode=pseudo-gui
super + e
	thunar
XF86Calculator
	galculator

# rofi launcher
super + {@space}
	rofi -show drun -show-icons
super + alt + w
	cd ~/Pictures/Wallpapers/ && \
	find . -maxdepth 2 -print0 | xargs -0 sxiv -t
#super + alt +
#	rofi -show window

# mpd controls
XF86Audio{Prev,Next,Play}
	notify_mpd -{p,n,t}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
