###
# wm independent hotkeys
###

# Bin System
Print
	screensnap
@Print + {ctrl,alt}
	screensnap {crop,window}
super + alt + c
	qrsend "$(xclip -se c -o)"

# Light System
XF86MonBrightness{Up,Down}
	light -{A,U} 5

# Lock System
ctrl + alt + Delete
	rofi-powermenu

# General Programs
super + t
	urxvt
super + n
	urxvt -g 110x50 -e ncmpcpp
super +  m
	mpv --player-operation-mode=pseudo-gui
super +  e
	thunar
XF86Calculator
	galculator

# rofi launcher
super + {r, @space}
	rofi -show drun
super + alt  w
	sxiv-wallpaper
super + v
	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
#super + alt + h
#	qmenu_hud
#super + alt +
#	rofi -show window

# mpd controls
XF86Audio{Prev,Next,Play}
	notify_mpd -{p,n,t}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
