;UNUSED
;modules_bg = #6D8EC1
;modules_fg = #F0F0F0
;modules_prefix_bg = #F0F0F0
;modules_prefix_fg = #1d1f21

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 18
wm-restack = bspwm

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.primary}
line-size = 6

spacing = 0
padding-left= 1
padding-right = 1
module-margin-left=2

font-0 = xos4 Terminus:size=8
font-1 = Font Awesome 5 Free:pixelsize=10:antialias=false;0
font-2 = Font Awesome 5 Free Solid:pixelsize=10:antialias=false;0
font-3 = Source Han Sans Medium:size=10;0

modules-left = mpd
modules-center= bspwm
modules-right = backlight cpu memory battery date
tray-position = right

[module/bspwm]
type = internal/bspwm
module-margin-left = 4
module-margin-right = 4
label-focused = %name%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%

label-occupied-foreground = ${colors.foreground-alt}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground}
label-empty-padding = 1

label-separator = |
label-separator-padding = 2
label-separator-foreground = ${colors.foreground-alt}

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <icon-stop> <toggle> <icon-next> <icon-repeat> <icon-random>  <bar-progress> <label-time>  <label-song>
label-offline = 🎜 mpd is offline

icon-play  = 
icon-pause = 
icon-stop  = 
icon-prev  = 
icon-next  = 
icon-random = 
icon-repeat = 

